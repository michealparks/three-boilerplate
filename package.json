{
  "name": "three-boilerplate",
  "version": "1.0.0",
  "description": "A three.js web app boilerplate",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron --js-flags=\"--use_strict\" src/electron/index",
    "dev": "cross-env NODE_ENV=development electron --js-flags=\"--use_strict\" src/electron/index",
    "webpack": "cross-env NODE_ENV=development node --use_strict webpack",
    "build": "cross-env NODE_ENV=production node --use-strict webpack"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michealparks/three-boilerplate.git"
  },
  "author": "Micheal Parks",
  "contributors": [
    {
      "name": "Micheal Parks",
      "email": "michealparks1989@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michealparks/three-boilerplate/issues"
  },
  "homepage": "https://github.com/michealparks/three-boilerplate#readme",
  "devDependencies": {
    "@wildpeaks/three-webpack-plugin": "^2.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "cross-env": "^7.0.2",
    "electron": "^8.2.4",
    "gl-matrix": "^3.3.0",
    "glsl-minifier": "0.0.13",
    "npm-run-all": "^4.1.5",
    "preact": "^10.4.0",
    "simplex-noise": "^2.4.0",
    "three": "^0.115.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.42.1"
  },
  "standard": {
    "globals": [
      "addEventListener",
      "removeEventListener",
      "requestAnimationFrame",
      "cancelAnimationFrame",
      "__root__",
      "__dev__",
      "__version__",
      "__darwin__",
      "__linux__",
      "__win32__",
      "__noop__"
    ]
  }
}
