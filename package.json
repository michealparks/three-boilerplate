{
  "name": "three-boilerplate",
  "version": "1.0.0",
  "description": "A three.js web app boilerplate",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron --js-flags=\"--use_strict\" src/electron/index",
    "dev": "cross-env NODE_ENV=development electron --js-flags=\"--use_strict\" src/electron/index",
    "build": "cross-env NODE_ENV=production node --use-strict webpack"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michealparks/three-boilerplate.git"
  },
  "author": "Micheal Parks",
  "contributors": [
    {
      "name": "Micheal Parks",
      "email": "michealparks1989@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michealparks/three-boilerplate/issues"
  },
  "homepage": "https://github.com/michealparks/three-boilerplate#readme",
  "devDependencies": {
    "cross-env": "^5.1.6",
    "electron": "^2.0.2",
    "glsl-minifier": "0.0.11",
    "three": "^0.93.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.12.0"
  },
  "standard": {
    "globals": [
      "addEventListener",
      "removeEventListener",
      "requestAnimationFrame",
      "cancelAnimationFrame",
      "__root__",
      "__dev__",
      "__version__",
      "__darwin__",
      "__linux__",
      "__win32__",
      "__noop__"
    ]
  },
  "dependencies": {
    "simplex-noise": "^2.4.0"
  }
}
